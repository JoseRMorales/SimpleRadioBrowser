---
import Layout from "@/layouts/Layout.astro";
---

<Layout title="404 - Page Not Found">
  <div
    class="relative h-full flex flex-col items-center justify-center bg-zinc-900 text-zinc-100 overflow-hidden"
  >
    <!-- Background Elements -->
    <div
      class="absolute inset-0 bg-linear-to-b from-blue-600/10 to-zinc-900 pointer-events-none"
    >
    </div>
    <div
      class="absolute -top-24 -left-24 w-96 h-96 bg-blue-500/10 rounded-full blur-[120px]"
    >
    </div>
    <div
      class="absolute -bottom-24 -right-24 w-96 h-96 bg-purple-500/10 rounded-full blur-[120px]"
    >
    </div>

    <div class="relative z-10 text-center px-6">
      <h1
        class="text-[12rem] font-black leading-none tracking-tighter text-transparent bg-clip-text bg-linear-to-b from-white to-white/10 opacity-20"
      >
        404
      </h1>
      <div class="-mt-12">
        <h2 class="text-4xl md:text-5xl font-bold mb-4">
          Lost in frequencies?
        </h2>
        <p class="text-zinc-400 text-lg md:text-xl max-w-md mx-auto mb-12">
          The station you are looking for has gone off-air or moved to a
          different frequency.
        </p>

        <a
          href="/"
          class="px-8 py-3 bg-zinc-800 text-white font-bold rounded-full hover:bg-zinc-700 transition-colors"
        >
          Back to Home
        </a>
      </div>
    </div>

    <!-- Decorative Radio Waves -->
    <div
      class="absolute bottom-0 left-0 right-0 h-32 opacity-20 pointer-events-none"
    >
      <div class="flex items-end justify-center gap-1 h-full">
        {
          Array.from({ length: 40 }).map((_, i) => (
            <div
              class="w-1 bg-blue-500 rounded-t-full animate-pulse"
              style={`height: ${Math.random() * 100}%; animation-delay: ${i * 0.1}s`}
            />
          ))
        }
      </div>
    </div>
  </div>
</Layout>

<style>
  @keyframes pulse {
    0%,
    100% {
      transform: scaleY(0.5);
    }
    50% {
      transform: scaleY(1);
    }
  }
  .animate-pulse {
    animation: pulse 1.5s ease-in-out infinite;
    transform-origin: bottom;
  }
</style>
