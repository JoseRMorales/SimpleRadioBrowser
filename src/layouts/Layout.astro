---
import "@/styles/global.css";
import { ClientRouter } from "astro:transitions";
import AsideMenu from "@/components/AsideMenu.astro";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<ClientRouter />
		<div id="app" class="relative h-screen p-2 gap-2 items-stretch">
			<header class="[grid-area:header] min-h-[50px]">HEADER</header>
			<aside
				class="[grid-area:aside] flex-col flex min-h-0 bg-card rounded-2xl overflow-y-auto"
			>
				<AsideMenu />
			</aside>
			<main
				class="[grid-area:main] bg-card rounded-2xl min-h-0 overflow-hidden"
			>
				<slot />
			</main>
			<footer class="[grid-area:player] min-h-[80px] overflow-hidden">
				FOOTER
			</footer>
		</div>
	</body>
</html>

<style>
	#app {
		display: grid;
		grid-template-areas:
			"header header header"
			"aside main main"
			"player player player";
		grid-template-columns: 350px 1fr;
		grid-template-rows: auto 1fr auto;
	}
</style>
